<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent" android:layout_width="fill_parent"
	android:background="#ffffff">
	<TableRow>
		<TextView android:id="@+id/text1" android:text="Hora Inicial:"
			android:textColor="#000000" />
		<EditText android:id="@+id/campoHoraInicial" android:width="240px" />
	</TableRow>
	<TableRow>
		<ImageButton android:src="@drawable/pesquisar" android:id="@+id/btBuscar" android:text="Buscar" />
	</TableRow>
	<TableRow>
		<TextView android:id="@+id/text2" android:text="Hora Final:"
			android:textColor="#000000" />
		<EditText android:id="@+id/campoHoraFinal"  />
	</TableRow>
	<TableRow>
		<TextView android:id="@+id/text3" android:text="Estado:"
			android:textColor="#000000" />
		<EditText android:id="@+id/campoEstado"  />
	</TableRow>
</TableLayout>