<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" 
     android:scrollbars="vertical" 
     android:layout_height="fill_parent" 
     android:layout_width="fill_parent">

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent" android:layout_width="fill_parent"
	android:background="#ffffff">
   	<TableRow>
		<TextView android:id="@+id/text1" android:text="Hora Inicial:"
			android:textColor="#000000" />

		<TimePicker
		    android:id="@+id/campoHoraInicialNovo"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content" />

	</TableRow>
	<TableRow>

		<TextView android:id="@+id/text2" android:text="Hora Final:"
			android:textColor="#000000" />

		<TimePicker
		    android:id="@+id/campoHoraFinalNovo"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content" />

	</TableRow>
	<TableRow>

		<TextView android:id="@+id/text3" android:text="Estado:"
			android:textColor="#000000" />

		<ToggleButton
		    android:id="@+id/campoEstadoNovo"
		    android:layout_width="100dp"
		    android:layout_height="wrap_content"
		    android:text="ToggleButton"
		    android:textOff="Desligado"
		    android:textOn="Ligado" />

	</TableRow>

	<TableRow
	    android:layout_width="fill_parent"
	    android:orientation="horizontal" >

		<TextView
		    android:id="@+id/text4"
		    android:layout_width="fill_parent"
		    android:text="Repetições:"
		    android:textColor="#000000" />

    </TableRow>	<TableRow>
	
		<CheckBox
		    android:id="@+id/campoSeg"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="Segunda" />

	</TableRow>
		<TableRow>

		<CheckBox
		    android:id="@+id/campoTer"
		    android:text="Terça" />

	</TableRow>
		<TableRow>

		<CheckBox
		    android:id="@+id/campoQua"
		    android:text="Quarta" />

	</TableRow>
			<TableRow>

		<CheckBox
		    android:id="@+id/campoQui"
		    android:text="Quinta" />

	</TableRow>
			<TableRow>

		<CheckBox
		    android:id="@+id/campoSex"
		    android:text="Sexta" />

	</TableRow>
				<TableRow>

		<CheckBox
		    android:id="@+id/campoSab"
		    android:text="Sábado" />

	</TableRow>
				<TableRow>

		<CheckBox
		    android:id="@+id/campoDom"
		    android:text="Domingo" />

	</TableRow>
		<TableRow>

		<TextView android:id="@+id/text5" android:text="Setores:"
			android:textColor="#000000" />
    </TableRow>
	<TableRow>

		<CheckBox
		    android:id="@+id/campoS1"
		    android:text="Setor 1" />

	</TableRow>
					<TableRow>

		<CheckBox
		    android:id="@+id/campoS2"
		    android:text="Setor 2" />

	</TableRow>
						<TableRow>

		<CheckBox
		    android:id="@+id/campoS3"
		    android:text="Setor 3" />

	</TableRow>
						<TableRow>

		<CheckBox
		    android:id="@+id/campoS4"
		    android:text="Setor 4" />

	</TableRow>
							<LinearLayout android:layout_width="wrap_content"
		android:layout_height="fill_parent">

		<ImageButton
		    android:id="@+id/btCancelar"
		    android:layout_width="100dp"
		    android:layout_height="wrap_content"
		    android:src="@drawable/cancelar"
		    android:text="Cancelar" />

		<ImageButton
		    android:id="@+id/btSalvar"
		    android:layout_width="100dp"
		    android:layout_height="wrap_content"
		    android:src="@drawable/salvar"
		    android:text=" Salvar " />

		<ImageButton
		    android:id="@+id/btExcluir"
		    android:layout_width="100dp"
		    android:layout_height="wrap_content"
		    android:src="@drawable/excluir"
		    android:text=" Excluir " />

	</LinearLayout>
</TableLayout>
</ScrollView>